#pragma once

#include "String.hpp"
#include "Types.hpp"
#include "Array.hpp"
#include "Macros.hpp"

namespace mc {

  MC_ENUM(TokenId,
	  LPAREN,
	  RPAREN,
	  SYMBOL,
	  STRING,
	  CHAR,
	  INT,
	  FLOAT,
	  NO_TOKEN,
	  ERROR);

  struct Token {

    TokenId id;

    union {
      char char_val;
      i32 int_val;
      f32 float_val;
      String str_val;
    };

    Token(TokenId _id);
    Token(const Token& b);
    Token(Token&& b);
    ~Token();
    void operator=(const Token& b);
    void operator=(Token&& b);
    
  };

  struct Lexer {

    String str;
    Array<Token> token_stream;
    Token cur_token;
    size_t index;

    Lexer(String _str) :
      str(_str),
      cur_token(TokenId::NO_TOKEN),
      index(0) {}

    char curChar();
    char peakChar();
    char eatChar();
    String eatWord();
    void pushToken();

    bool handleQuote();
    bool handleNumber();
    void lex();
  };

  String to_string(Token& tok);
  Array<Token> lex(String str);

}
